<?xml version="1.0" encoding="utf-8"?>
<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/groupFilter"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_centerInParent="true" >

    <RadioButton
        android:id="@+id/rbNotApply"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/filter_apply" />

    <RadioButton
        android:id="@+id/rbNotApprove"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/filter_approve" />

    <RadioButton
        android:id="@+id/rbCancel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/filter_cancel" />

    <RadioButton
        android:id="@+id/rbOK"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/filter_ok" />
     <RadioButton
        android:id="@+id/rbNone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/filter_none" />

</RadioGroup>